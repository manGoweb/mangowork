body
  min-height 100vh
body
  background url(../images/body.jpg) center top no-repeat
  background-size cover
  font-family $f-secondary
  text-align center
  color #fff
  position relative
  margin 0
  font-smoothing antialiased

.kontejner
  width 90%
  max-width 800px
  margin 50px auto

img
  max-width 100%
  height auto

a
  color inherit
  outline none

h1
  font-family $f-primary
  font-size 30px
  font-weight normal
  margin 0
  line-height 1

  @media $768
    font-size 80px

.tabulka
  text-align left
  margin-top 20px
  width 100%
  tr:nth-child(even)
    td
      background-color rgba(#fff,.3)
  tr
    td
      padding 5px 20px
      background-color rgba(#fff,.2)
      font-size 14px
      &.den
        width 100px
        line-height 1.2
        white-space nowrap
        div
          font-size 14px
      &.mesic
        font-size 30px
        background none
        letter-spacing 1px
        padding-top 20px
      &.data
        font-size 16px

form
  width 100%
  .policko
    border 0
    padding 10px 0
    background-color transparent
    font-size 18px
    font-weight 300
    width 400px
    outline 0
    color $c-text
  .buttonek
    border 0
    background rgba(#000, .1)
    color #fff
    font-size 40px
    line-height .2
    padding-bottom 15px
    float right
    height 42px
    width 42px
    cursor pointer
    transition .2s ease all
    &:hover
      background rgba(#000, .3)


