*, *:before, *:after
	box-sizing border-box


.clearfix:before,
.clearfix:after
	content " "
	display table


.clearfix:after
	clear both


body.admin-bar
	#__bs_notify__
		top 32px !important

#__bs_notify__
	font-size 12px !important


.reset
	margin 0
	padding 0
	list-style none
	border none


.message
	margin 20px
	padding 10px 40px
	border-radius $radius
	color $black
	font-size 18px
	display block

	&-success
		background-color $green


	&-error
		background-color $red


.access
	font-size 0

// responsive iframe
.embed-container
	position relative
	padding-bottom 56.25%
	height 0
	overflow hidden
	max-width 100%
	height auto

	iframe, object, embed
		position absolute
		top 0
		left 0
		width 100%
		height 100%

